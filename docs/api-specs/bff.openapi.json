{
    "openapi": "3.0.0",
    "paths": {
        "/api/v1/auth/login": {
            "post": {
                "operationId": "AuthController_login",
                "summary": "User login",
                "parameters": [],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginDto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                },
                "tags": [
                    "auth"
                ]
            }
        },
        "/api/v1/auth/profile": {
            "get": {
                "operationId": "AuthController_getProfile",
                "summary": "Get current user profile",
                "parameters": [
                    {
                        "name": "X-User-Role",
                        "in": "header",
                        "description": "User role (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Username",
                        "in": "header",
                        "description": "Username (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Id",
                        "in": "header",
                        "description": "User ID (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserProfileResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Missing Gateway headers"
                    }
                },
                "tags": [
                    "auth"
                ]
            }
        },
        "/api/v1/addresses/{address}": {
            "get": {
                "operationId": "AddressController_getAddressInfo",
                "summary": "Get address information",
                "parameters": [
                    {
                        "name": "X-User-Role",
                        "in": "header",
                        "description": "User role (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Username",
                        "in": "header",
                        "description": "Username (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Id",
                        "in": "header",
                        "description": "User ID (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "address",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "network",
                        "required": false,
                        "in": "query",
                        "description": "Network",
                        "schema": {
                            "default": "ethereum",
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Address information",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AddressInfoResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Missing Gateway headers"
                    },
                    "404": {
                        "description": "Address not found"
                    }
                },
                "tags": [
                    "addresses"
                ]
            }
        },
        "/api/v1/addresses/{address}/transfers": {
            "get": {
                "operationId": "AddressController_getAddressTransfers",
                "summary": "Get address transfers",
                "parameters": [
                    {
                        "name": "X-User-Role",
                        "in": "header",
                        "description": "User role (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Username",
                        "in": "header",
                        "description": "Username (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Id",
                        "in": "header",
                        "description": "User ID (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "address",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "required": false,
                        "in": "query",
                        "description": "Page number",
                        "schema": {
                            "default": 1,
                            "type": "number"
                        }
                    },
                    {
                        "name": "pageSize",
                        "required": false,
                        "in": "query",
                        "description": "Page size",
                        "schema": {
                            "default": 20,
                            "type": "number"
                        }
                    },
                    {
                        "name": "network",
                        "required": false,
                        "in": "query",
                        "description": "Network",
                        "schema": {
                            "default": "ethereum",
                            "type": "string"
                        }
                    },
                    {
                        "name": "transferType",
                        "required": false,
                        "in": "query",
                        "description": "Transfer type filter",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "startTime",
                        "required": false,
                        "in": "query",
                        "description": "Start time (RFC3339)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "endTime",
                        "required": false,
                        "in": "query",
                        "description": "End time (RFC3339)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Address transfers",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PaginatedTransfersResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Missing Gateway headers"
                    },
                    "404": {
                        "description": "Address not found"
                    }
                },
                "tags": [
                    "addresses"
                ]
            }
        },
        "/api/v1/addresses/{address}/stats": {
            "get": {
                "operationId": "AddressController_getAddressStats",
                "summary": "Get address statistics",
                "parameters": [
                    {
                        "name": "X-User-Role",
                        "in": "header",
                        "description": "User role (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Username",
                        "in": "header",
                        "description": "Username (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Id",
                        "in": "header",
                        "description": "User ID (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "address",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "network",
                        "required": false,
                        "in": "query",
                        "description": "Network",
                        "schema": {
                            "default": "ethereum",
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Address statistics",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AddressStatsResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Missing Gateway headers"
                    },
                    "404": {
                        "description": "Address not found"
                    }
                },
                "tags": [
                    "addresses"
                ]
            }
        },
        "/api/v1/risk/score": {
            "post": {
                "operationId": "RiskController_scoreAddress",
                "summary": "Calculate risk score for an address",
                "parameters": [
                    {
                        "name": "X-User-Role",
                        "in": "header",
                        "description": "User role (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Username",
                        "in": "header",
                        "description": "Username (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Id",
                        "in": "header",
                        "description": "User ID (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RiskScoreRequestDto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Risk score calculated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RiskScoreResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "401": {
                        "description": "Unauthorized - Missing Gateway headers"
                    }
                },
                "tags": [
                    "risk"
                ]
            }
        },
        "/api/v1/risk/score/batch": {
            "post": {
                "operationId": "RiskController_scoreAddressesBatch",
                "summary": "Calculate risk scores for multiple addresses",
                "parameters": [
                    {
                        "name": "X-User-Role",
                        "in": "header",
                        "description": "User role (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Username",
                        "in": "header",
                        "description": "Username (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Id",
                        "in": "header",
                        "description": "User ID (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/BatchRiskScoreRequestDto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Risk scores calculated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BatchRiskScoreResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "401": {
                        "description": "Unauthorized - Missing Gateway headers"
                    }
                },
                "tags": [
                    "risk"
                ]
            }
        },
        "/api/v1/risk/rules": {
            "get": {
                "operationId": "RiskController_listRules",
                "summary": "Get all risk rules",
                "parameters": [
                    {
                        "name": "X-User-Role",
                        "in": "header",
                        "description": "User role (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Username",
                        "in": "header",
                        "description": "Username (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-User-Id",
                        "in": "header",
                        "description": "User ID (provided by Gateway)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Risk rules list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/RiskRule"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Missing Gateway headers"
                    }
                },
                "tags": [
                    "risk"
                ]
            }
        }
    },
    "info": {
        "title": "Chain Risk Platform - BFF",
        "description": "BFF API for Chain Risk Platform",
        "version": "1.0",
        "contact": {}
    },
    "tags": [
        {
            "name": "auth",
            "description": "Authentication endpoints"
        },
        {
            "name": "addresses",
            "description": "Address query endpoints"
        },
        {
            "name": "risk",
            "description": "Risk scoring endpoints"
        }
    ],
    "servers": [],
    "components": {
        "securitySchemes": {
            "bearer": {
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "type": "http"
            }
        },
        "schemas": {
            "LoginDto": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "Username",
                        "example": "admin"
                    },
                    "password": {
                        "type": "string",
                        "description": "Password",
                        "example": "password123"
                    }
                },
                "required": [
                    "username",
                    "password"
                ]
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string"
                    },
                    "tokenType": {
                        "type": "string"
                    },
                    "expiresIn": {
                        "type": "string"
                    }
                },
                "required": [
                    "accessToken",
                    "tokenType",
                    "expiresIn"
                ]
            },
            "UserProfileResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "User ID",
                        "example": "1"
                    },
                    "username": {
                        "type": "string",
                        "description": "Username",
                        "example": "admin"
                    },
                    "role": {
                        "type": "string",
                        "description": "User role",
                        "example": "admin",
                        "enum": [
                            "admin",
                            "user"
                        ]
                    }
                },
                "required": [
                    "id",
                    "username",
                    "role"
                ]
            },
            "AddressInfoResponse": {
                "type": "object",
                "properties": {
                    "address": {
                        "type": "string"
                    },
                    "network": {
                        "type": "string"
                    },
                    "firstSeen": {
                        "type": "string"
                    },
                    "lastSeen": {
                        "type": "string"
                    },
                    "totalTxCount": {
                        "type": "number"
                    },
                    "sentTxCount": {
                        "type": "number"
                    },
                    "receivedTxCount": {
                        "type": "number"
                    },
                    "uniqueInteracted": {
                        "type": "number"
                    }
                },
                "required": [
                    "address",
                    "network",
                    "firstSeen",
                    "lastSeen",
                    "totalTxCount",
                    "sentTxCount",
                    "receivedTxCount",
                    "uniqueInteracted"
                ]
            },
            "TransferResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "txHash": {
                        "type": "string"
                    },
                    "blockNumber": {
                        "type": "number"
                    },
                    "logIndex": {
                        "type": "number"
                    },
                    "fromAddress": {
                        "type": "string"
                    },
                    "toAddress": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    },
                    "timestamp": {
                        "type": "string"
                    },
                    "transferType": {
                        "type": "string"
                    },
                    "network": {
                        "type": "string"
                    },
                    "tokenAddress": {
                        "type": "string",
                        "description": "Token contract address (for ERC20 transfers)"
                    },
                    "tokenSymbol": {
                        "type": "string",
                        "description": "Token symbol (for ERC20 transfers)"
                    },
                    "tokenDecimal": {
                        "type": "number",
                        "description": "Token decimal places (for ERC20 transfers)"
                    }
                },
                "required": [
                    "id",
                    "txHash",
                    "blockNumber",
                    "logIndex",
                    "fromAddress",
                    "toAddress",
                    "value",
                    "timestamp",
                    "transferType",
                    "network"
                ]
            },
            "PaginationMetadata": {
                "type": "object",
                "properties": {
                    "page": {
                        "type": "number"
                    },
                    "pageSize": {
                        "type": "number"
                    },
                    "total": {
                        "type": "number"
                    },
                    "totalPages": {
                        "type": "number"
                    }
                },
                "required": [
                    "page",
                    "pageSize",
                    "total",
                    "totalPages"
                ]
            },
            "PaginatedTransfersResponse": {
                "type": "object",
                "properties": {
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/TransferResponse"
                        }
                    },
                    "pagination": {
                        "$ref": "#/components/schemas/PaginationMetadata"
                    }
                },
                "required": [
                    "items",
                    "pagination"
                ]
            },
            "AddressStatsResponse": {
                "type": "object",
                "properties": {
                    "totalValueSent": {
                        "type": "string"
                    },
                    "totalValueReceived": {
                        "type": "string"
                    },
                    "avgTxValue": {
                        "type": "string"
                    },
                    "maxTxValue": {
                        "type": "string"
                    },
                    "minTxValue": {
                        "type": "string"
                    }
                },
                "required": [
                    "totalValueSent",
                    "totalValueReceived",
                    "avgTxValue",
                    "maxTxValue",
                    "minTxValue"
                ]
            },
            "RiskScoreRequestDto": {
                "type": "object",
                "properties": {
                    "address": {
                        "type": "string",
                        "description": "Ethereum address",
                        "example": "0x742d35Cc6634C0532925a3b844Bc9e7595f1b7E0"
                    },
                    "network": {
                        "type": "string",
                        "description": "Network",
                        "default": "ethereum"
                    },
                    "includeFactors": {
                        "type": "boolean",
                        "description": "Include detailed risk factors",
                        "default": true
                    }
                },
                "required": [
                    "address"
                ]
            },
            "RiskFactorResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "score": {
                        "type": "number"
                    },
                    "weight": {
                        "type": "number"
                    },
                    "description": {
                        "type": "string"
                    },
                    "triggered": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "name",
                    "score",
                    "weight",
                    "description",
                    "triggered"
                ]
            },
            "RiskScoreResponse": {
                "type": "object",
                "properties": {
                    "address": {
                        "type": "string"
                    },
                    "network": {
                        "type": "string"
                    },
                    "riskScore": {
                        "type": "number"
                    },
                    "riskLevel": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high",
                            "critical"
                        ]
                    },
                    "factors": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RiskFactorResponse"
                        }
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "evaluatedAt": {
                        "type": "string"
                    },
                    "cached": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "address",
                    "network",
                    "riskScore",
                    "riskLevel",
                    "factors",
                    "tags",
                    "evaluatedAt",
                    "cached"
                ]
            },
            "BatchRiskScoreRequestDto": {
                "type": "object",
                "properties": {
                    "addresses": {
                        "description": "List of addresses",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "network": {
                        "type": "string",
                        "description": "Network",
                        "default": "ethereum"
                    },
                    "includeFactors": {
                        "type": "boolean",
                        "description": "Include detailed risk factors",
                        "default": false
                    }
                },
                "required": [
                    "addresses"
                ]
            },
            "BatchRiskScoreResponse": {
                "type": "object",
                "properties": {
                    "results": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RiskScoreResponse"
                        }
                    },
                    "total": {
                        "type": "number"
                    },
                    "failed": {
                        "type": "number"
                    }
                },
                "required": [
                    "results",
                    "total",
                    "failed"
                ]
            },
            "RiskRule": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "description",
                    "enabled"
                ]
            }
        }
    }
}