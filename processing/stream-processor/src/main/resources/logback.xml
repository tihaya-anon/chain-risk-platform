<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console: colored output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %highlight([%-4level]) %cyan(%logger{20}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File: full details with line numbers -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/stream-processor.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/stream-processor.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Flink noise -->
    <logger name="org.apache.flink" level="WARN"/>
    <logger name="org.apache.flink.runtime.jobmaster" level="INFO"/>
    <logger name="org.apache.flink.runtime.checkpoint" level="WARN"/>
    
    <!-- Reduce Kafka noise -->
    <logger name="org.apache.kafka" level="WARN"/>
    
    <!-- Reduce Pekko/Akka noise -->
    <logger name="org.apache.pekko" level="WARN"/>
    <logger name="akka" level="WARN"/>
    
    <!-- Application logging -->
    <logger name="com.chainrisk" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
