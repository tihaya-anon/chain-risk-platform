# ============================================
# Chain Risk Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ==================== Docker Host ====================
# If running Docker on a remote machine, set its IP here
# For local Docker, use: localhost or 127.0.0.1
DOCKER_HOST_IP=localhost

# ==================== Database ====================
POSTGRES_HOST=${DOCKER_HOST_IP}
POSTGRES_PORT=15432
POSTGRES_USER=chainrisk
POSTGRES_PASSWORD=chainrisk123
POSTGRES_DB=chainrisk

# Neo4j
NEO4J_HOST=${DOCKER_HOST_IP}
NEO4J_PORT=17687
NEO4J_URI=bolt://${DOCKER_HOST_IP}:17687
NEO4J_USER=neo4j
NEO4J_PASSWORD=chainrisk123

# Redis
REDIS_HOST=${DOCKER_HOST_IP}
REDIS_PORT=16379
REDIS_PASSWORD=

# ==================== Message Queue ====================
KAFKA_BROKERS=${DOCKER_HOST_IP}:19092
KAFKA_GROUP_ID=chain-risk-platform

# ==================== External APIs ====================
# Etherscan API (https://etherscan.io/apis)
ETHERSCAN_API_KEY=your_etherscan_api_key

# BSCScan API (https://bscscan.com/apis)
BSCSCAN_API_KEY=your_bscscan_api_key

# ==================== Service Discovery & Config ====================
# Nacos Server (Configuration Center + Service Discovery)
NACOS_SERVER=${DOCKER_HOST_IP}:18848
NACOS_NAMESPACE=public
# Nacos Authentication (required if auth is enabled on server)
NACOS_USERNAME=nacos
NACOS_PASSWORD=nacos

# ==================== Authentication ====================
JWT_SECRET=your_jwt_secret_key_at_least_32_chars
JWT_EXPIRES_IN=24h

# ==================== Monitoring ====================
JAEGER_ENDPOINT=http://${DOCKER_HOST_IP}:14268/api/traces
JAEGER_AGENT_HOST=${DOCKER_HOST_IP}
JAEGER_AGENT_PORT=6831

# ==================== Service Ports ====================
ORCHESTRATOR_PORT=8080
BFF_PORT=3001
QUERY_SERVICE_PORT=8081
RISK_SERVICE_PORT=8082
ALERT_SERVICE_PORT=8083
GRAPH_ENGINE_PORT=8084
DATA_INGESTION_PORT=9091

# ==================== Environment ====================
# development | staging | production
NODE_ENV=development
GO_ENV=development
SPRING_PROFILES_ACTIVE=dev
