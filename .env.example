# ============================================
# Chain Risk Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ==================== Database ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=chainrisk
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=chainrisk

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== Message Queue ====================
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=chain-risk-platform

# ==================== External APIs ====================
# Etherscan API (https://etherscan.io/apis)
ETHERSCAN_API_KEY=your_etherscan_api_key

# BSCScan API (https://bscscan.com/apis)
BSCSCAN_API_KEY=your_bscscan_api_key

# ==================== Service Discovery ====================
NACOS_SERVER=localhost:8848
NACOS_NAMESPACE=public

# ==================== Authentication ====================
JWT_SECRET=your_jwt_secret_key_at_least_32_chars
JWT_EXPIRES_IN=24h

# ==================== Monitoring ====================
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==================== Service Ports ====================
BFF_PORT=3000
QUERY_SERVICE_PORT=8081
RISK_SERVICE_PORT=8082
ALERT_SERVICE_PORT=8083
ORCHESTRATOR_PORT=8080

# ==================== Environment ====================
# development | staging | production
NODE_ENV=development
GO_ENV=development
SPRING_PROFILES_ACTIVE=dev
